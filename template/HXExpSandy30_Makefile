
# Run this as:
#   make -f {{TARGET_NAME}}_Makefile

%.swf: %.hxml
	haxe $<

%.swf: %.xml
	swfmill simple $< $@

default: {{TARGET_NAME}}.swf

{% if HAS_TEXTURE -%}
{{TARGET_NAME}}.swf: {{TARGET_NAME}}Skin.swf
{%- endif %}

{% for t in TESTED_CLASSES %}
{% if t.has_texture -%}
{{TARGET_NAME}}Skin.swf: {{t.name}}.png
{%- endif %}
{{TARGET_NAME}}.swf: {{t.name}}.hx
{% endfor %}

{{TARGET_NAME}}.swf: {{CLASS_NAME}}.hx


# Done!
